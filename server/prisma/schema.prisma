generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                   @id @default(autoincrement())
  username             String                @unique @db.VarChar(128)
  password             String?
  email                String?               @unique
  refreshTokens        RefreshToken[]
  federatedCredentials FederatedCredential[]
  oauthTokens          OauthToken[]
  sentFrienships       Friendship[]          @relation("Sender")
  recievedFriendships  Friendship[]          @relation("Recipient")
  profile              Profile?
  posts                Post[]                @relation("PostAuthor")
  wallPosts            Post[]                @relation("PostWall")
  likes                Like[]
  comments             Comment[]
}

model RefreshToken {
  id             Int      @id @default(autoincrement())
  token          String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         Int
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  rememberDevice Boolean  @default(false)
  revoked        Boolean  @default(false)
}

model FederatedCredential {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  provider   String
  providerId String

  @@unique([provider, providerId])
}

model OauthToken {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Friendship {
  id        Int      @id @default(autoincrement())
  user1     User     @relation("Sender", fields: [user1Id], references: [id], onDelete: Cascade)
  user1Id   Int
  user2     User     @relation("Recipient", fields: [user2Id], references: [id], onDelete: Cascade)
  user2Id   Int
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([user1Id, user2Id])
}

model Profile {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int     @unique
  firstName String? @db.VarChar(64)
  lastName  String? @db.VarChar(64)
  avatar    String?
}

enum PostType {
  REGULAR
  PROFILE_PIC_UPDATE
}

model Post {
  id        Int       @id @default(autoincrement())
  type      PostType  @default(REGULAR)
  content   String?
  mediaUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  author    User      @relation(name: "PostAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  authorId  Int
  wall      User      @relation(name: "PostWall", fields: [wallId], references: [id], onDelete: Cascade)
  wallId    Int
  comments  Comment[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  isDeleted Boolean   @default(false)
  author    User?     @relation(fields: [authorId], references: [id], onDelete: SetNull)
  authorId  Int?
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  parent    Comment?  @relation(name: "CommentReplies", fields: [parentId], references: [id], onDelete: Restrict)
  parentId  Int?
  replies   Comment[] @relation("CommentReplies")
}

enum LikeTargetType {
  POST
  COMMENT
}

model Like {
  id         Int            @id @default(autoincrement())
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  targetId   Int
  targetType LikeTargetType

  @@unique([userId, targetId, targetType])
}

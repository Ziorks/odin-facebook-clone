generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                   @id @default(autoincrement())
  username             String                @unique @db.VarChar(128)
  password             String?
  email                String?               @unique
  refreshTokens        RefreshToken[]
  federatedCredentials FederatedCredential[]
  oauthTokens          OauthToken[]
  sentFrienships       Friendship[]          @relation("Sender")
  recievedFriendships  Friendship[]          @relation("Recipient")
  profile              Profile?
  posts                Post[]                @relation("PostAuthor")
  wallPosts            Post[]                @relation("PostWall")
  likes                Like[]
  comments             Comment[]
}

model RefreshToken {
  id             Int      @id @default(autoincrement())
  token          String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         Int
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  rememberDevice Boolean  @default(false)
  revoked        Boolean  @default(false)
}

model FederatedCredential {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  provider   String
  providerId String

  @@unique([provider, providerId])
}

model OauthToken {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Friendship {
  id        Int      @id @default(autoincrement())
  user1     User     @relation("Sender", fields: [user1Id], references: [id], onDelete: Cascade)
  user1Id   Int
  user2     User     @relation("Recipient", fields: [user2Id], references: [id], onDelete: Cascade)
  user2Id   Int
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([user1Id, user2Id])
}

model Profile {
  id               Int               @id @default(autoincrement())
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           Int               @unique
  firstName        String?           @db.VarChar(64)
  lastName         String?           @db.VarChar(64)
  avatar           String?
  workAndEducation WorkAndEducation?
  placesLived      PlacesLived?
  contactInfo      ContactInfo?
  details          Details?
}

model WorkAndEducation {
  id        Int      @id @default(autoincrement())
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int      @unique
  works     Work[]
  schools   School[]
}

model Work {
  id                 Int              @id @default(autoincrement())
  company            String           @db.VarChar(128)
  position           String?          @db.VarChar(128)
  location           String?          @db.VarChar(128)
  description        String?          @db.VarChar(256)
  startYear          Int?             @db.SmallInt()
  endYear            Int?             @db.SmallInt()
  currentJob         Boolean          @default(true)
  workAndEducation   WorkAndEducation @relation(fields: [workAndEducationId], references: [id], onDelete: Cascade)
  workAndEducationId Int
}

model School {
  id                 Int              @id @default(autoincrement())
  name               String           @db.VarChar(128)
  description        String?          @db.VarChar(256)
  degree             String?          @db.VarChar(128)
  startYear          Int?             @db.SmallInt()
  endYear            Int?             @db.SmallInt()
  graduated          Boolean          @default(true)
  workAndEducation   WorkAndEducation @relation(fields: [workAndEducationId], references: [id], onDelete: Cascade)
  workAndEducationId Int
}

model PlacesLived {
  id          Int     @id @default(autoincrement())
  hometown    City?   @relation("Hometown")
  currentCity City?   @relation("CurrentCity")
  cities      City[]  @relation("PlaceLived")
  profile     Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId   Int     @unique
}

model City {
  id            Int          @id @default(autoincrement())
  name          String       @db.VarChar(64)
  yearMoved     Int?         @db.SmallInt()
  hometown      PlacesLived? @relation("Hometown", fields: [hometownId], references: [id], onDelete: Cascade)
  hometownId    Int?         @unique
  currentCity   PlacesLived? @relation("CurrentCity", fields: [currentCityId], references: [id], onDelete: Cascade)
  currentCityId Int?         @unique
  placesLived   PlacesLived? @relation("PlaceLived", fields: [placesLivedId], references: [id], onDelete: Cascade)
  placesLivedId Int?
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model ContactInfo {
  id           Int       @id @default(autoincrement())
  phoneNumbers String[]  @db.VarChar(32)
  emails       String[]  @db.VarChar(64)
  websites     String[]  @db.VarChar(128)
  socialLinks  String[]  @db.VarChar(128)
  gender       Gender?
  birthday     Birthday?
  languages    String[]  @db.VarChar(32)
  profile      Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId    Int       @unique
}

model Birthday {
  id            Int         @id @default(autoincrement())
  month         Int?        @db.SmallInt()
  day           Int?        @db.SmallInt()
  year          Int?        @db.SmallInt()
  contactInfo   ContactInfo @relation(fields: [contactInfoId], references: [id], onDelete: Cascade)
  contactInfoId Int         @unique
}

model Details {
  id        Int     @id @default(autoincrement())
  aboutMe   String? @db.VarChar(512)
  quotes    String? @db.VarChar(512)
  music     String? @db.VarChar(512)
  books     String? @db.VarChar(512)
  tv        String? @db.VarChar(512)
  movies    String? @db.VarChar(512)
  sports    String? @db.VarChar(512)
  hobbies   String? @db.VarChar(512)
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int     @unique
}

enum PostType {
  REGULAR
  PROFILE_PIC_UPDATE
}

model Post {
  id        Int       @id @default(autoincrement())
  type      PostType  @default(REGULAR)
  content   String?
  mediaUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  author    User      @relation(name: "PostAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  authorId  Int
  wall      User      @relation(name: "PostWall", fields: [wallId], references: [id], onDelete: Cascade)
  wallId    Int
  comments  Comment[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  isDeleted Boolean   @default(false)
  author    User?     @relation(fields: [authorId], references: [id], onDelete: SetNull)
  authorId  Int?
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  parent    Comment?  @relation(name: "CommentReplies", fields: [parentId], references: [id], onDelete: Restrict)
  parentId  Int?
  replies   Comment[] @relation("CommentReplies")
}

enum LikeTargetType {
  POST
  COMMENT
}

model Like {
  id         Int            @id @default(autoincrement())
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  targetId   Int
  targetType LikeTargetType

  @@unique([userId, targetId, targetType])
}

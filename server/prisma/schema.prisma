generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                   @id @default(autoincrement())
  username             String                @unique @db.VarChar(128)
  password             String?
  email                String?               @unique
  refreshTokens        RefreshToken[]
  federatedCredentials FederatedCredential[]
  oauthTokens          OauthToken[]
  sentFrienships       Friendship[]          @relation("Sender")
  recievedFriendships  Friendship[]          @relation("Recipient")
  profile              Profile?
  posts                Post[]                @relation("PostAuthor")
  wallPosts            Post[]                @relation("PostWall")
  likes                Like[]
  comments             Comment[]
}

model RefreshToken {
  id             Int      @id @default(autoincrement())
  token          String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         Int
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  rememberDevice Boolean  @default(false)
  revoked        Boolean  @default(false)
}

model FederatedCredential {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  provider   String
  providerId String

  @@unique([provider, providerId])
}

model OauthToken {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Friendship {
  id        Int      @id @default(autoincrement())
  user1     User     @relation("Sender", fields: [user1Id], references: [id], onDelete: Cascade)
  user1Id   Int
  user2     User     @relation("Recipient", fields: [user2Id], references: [id], onDelete: Cascade)
  user2Id   Int
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([user1Id, user2Id])
}

model Profile {
  id               Int               @id @default(autoincrement())
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           Int               @unique
  firstName        String?           @db.VarChar(64)
  lastName         String?           @db.VarChar(64)
  avatar           String?
  workAndEducation WorkAndEducation?
  // hometown      City?        @relation(fields: [hometownId], references: [id], name: "hometown", onDelete: SetNull)
  // hometownId    Int?
  // currentCity   City?        @relation(fields: [currentCityId], references: [id], name: "currentCity", onDelete: SetNull)
  // currentCityId Int?
  // placesLived   PlaceLived[]
}

model WorkAndEducation {
  id        Int      @id @default(autoincrement())
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int      @unique
  works     Work[]
  schools   School[]
}

model Work {
  id                 Int              @id @default(autoincrement())
  company            String           @db.VarChar(128)
  position           String?          @db.VarChar(128)
  location           String?          @db.VarChar(128)
  description        String?          @db.VarChar(256)
  startYear          Int?             @db.SmallInt()
  endYear            Int?             @db.SmallInt()
  currentJob         Boolean          @default(true)
  workAndEducation   WorkAndEducation @relation(fields: [workAndEducationId], references: [id], onDelete: Cascade)
  workAndEducationId Int
}

model School {
  id                 Int              @id @default(autoincrement())
  name               String           @db.VarChar(128)
  description        String?          @db.VarChar(256)
  degree             String?          @db.VarChar(128)
  startYear          Int?             @db.SmallInt()
  endYear            Int?             @db.SmallInt()
  graduated          Boolean          @default(true)
  workAndEducation   WorkAndEducation @relation(fields: [workAndEducationId], references: [id], onDelete: Cascade)
  workAndEducationId Int
}

